# Install Pure prompt
function pure_prompt() {(
    ZFUNCTIONS=${HOME}/.zfunctions
    mkdir -p "${ZFUNCTIONS}"
    [[ -d ${ZFUNCTIONS}/pure ]] || git clone https://github.com/sindresorhus/pure "${ZFUNCTIONS}"/pure
    cd "${ZFUNCTIONS}"/pure
    git pull
    ln -fs "${PWD}"/pure.zsh "${ZFUNCTIONS}"/prompt_pure_setup
    ln -fs "${PWD}"/async.zsh "${ZFUNCTIONS}"/async
)}
# vi: filetype=zsh

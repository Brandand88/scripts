# Install Pure prompt
function pure_prompt() {(
    ZFUNCTIONS=${HOME}/.zfunctions
    mkdir -p "${ZFUNCTIONS}"
    cd "${ZFUNCTIONS}"
    git clone https://github.com/sindresorhus/pure
    cd pure
    ln -s "${PWD}"/pure.zsh "${ZFUNCTIONS}"/prompt_pure_setup
    ln -s "${PWD}"/async.zsh "${ZFUNCTIONS}"/async
)}
# vi: filetype=zsh
